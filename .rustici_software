#!/usr/bin/env bash
# Shell functions and code used for Rustici Software development.
alias update-cc-dev-tools="update-repo https://github.com/RusticiSoftware/cc-dev-tools.git"

function update-engine-dev-tools {
    update-repo https://github.com/RusticiSoftware/engine-dev-tools.git
    rm -f "${HOME}/code/engine-dev-tools/config.json"
    ln -s "${HOME}/init/engine-dev-tools.config.json" "${HOME}/code/engine-dev-tools/config.json"
}

if [ -f "${HOME}/code/cc-dev-tools/cc_shell.sh" ]; then
    source "${HOME}/code/cc-dev-tools/cc_shell.sh"
fi

if [ -f "${HOME}/code/engine-dev-tools/edt_shell.sh" ]; then
    source "${HOME}/code/engine-dev-tools/edt_shell.sh"
fi
